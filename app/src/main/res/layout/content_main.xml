<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.akty7.assignment03.MainActivity"
    tools:showIn="@layout/activity_main">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"


        android:layout_alignParentStart="true" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin_main"
            android:paddingRight="@dimen/activity_horizontal_margin_main"
            android:paddingTop="@dimen/activity_vertical_margin_main"

            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Enter Team Name"
                android:textStyle="bold"
                android:textSize="18sp"

                android:id="@+id/editText"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Name of Team Member 1"

                android:textSize="14sp"
                android:id="@+id/editText2"
                android:layout_marginTop="30dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Entry Number of Member"

                android:textSize="14sp"
                android:id="@+id/editText3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Name of Team Member 2"
                android:textSize="14sp"

                android:id="@+id/editText4"
                android:layout_marginTop="30dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Entry Number of Member"
                android:textSize="14sp"

                android:id="@+id/editText5" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Team Member 3"
                android:textSize="14sp"
                android:id="@+id/checkBox"
                android:layout_marginTop="30dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Name of Team Member 3"
                android:textSize="14sp"

                android:id="@+id/editText6"
                 />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Entry Number of Member"
                android:textSize="14sp"

                android:id="@+id/editText7" />

        </LinearLayout>

        </ScrollView>



</RelativeLayout>
